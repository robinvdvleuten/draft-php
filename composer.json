{
  "name": "webstronauts/draft-php",
  "description": "A php implementation of Facebook's Draft.js library",
  "authors": [
    {
      "name": "Robin van der Vleuten",
      "email": "robin@webstronauts.co"
    }
  ],
  "homepage" : "https://github.com/webstronauts/draft-php",
  "license": "MIT",
  "require": {
    "php": "^5.6|^7.0"
  },
  "require-dev": {
    "phpspec/phpspec": "^2.0",
    "friendsofphp/php-cs-fixer": "2.0.0-alpha",
    "sllh/php-cs-fixer-styleci-bridge": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Draft\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Draft\\": "spec/"
    }
  },
  "scripts": {
    "test": "bin/phpspec run; bin/php-cs-fixer fix -v --diff --dry-run;"
  },
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
